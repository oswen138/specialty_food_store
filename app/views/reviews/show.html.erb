<h1>Review by: <%= @review.author %></h1>
<hr>
<h2>Product: <%= @product.name %></h2><p>reviewed on: <%= @review.created_at %>
<p><em><%= @review.content %></em></p>
<br>
<br>
<hr>
<br>

<% if is_admin? %>
  <p><%= link_to "Edit review", edit_product_review_path(@product, @review) %></p>
  <p><%= link_to "Delete review", product_review_path(@product, @review),
                          :data => {:confirm => "Are you sure?",
                                        :method => "delete"} %></p>
<% end %>

<p><%= link_to "Return to product", product_path(@product) %></p>